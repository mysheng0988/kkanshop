<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundImageView">
        <attr name="border_color" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_alpha" format="integer"/>
        <attr name="shadow_color" format="color"/>
    </declare-styleable>
    <attr name="visible_tab_count" format="integer"></attr>
    <declare-styleable name="ViewPagerIndicator">
        <attr name="visible_tab_count" ></attr>
    </declare-styleable>
    <!-- 自定义星星属性 -->
    <declare-styleable name="star">
        <!--星星数量-->
        <attr format="integer" name="starsNum"></attr>
        <!--星星宽度-->
        <attr format="dimension" name="starWidth"></attr>
        <!--星星高度-->
        <attr format="dimension" name="starHeight"></attr>
        <!--//星星间距-->
        <attr format="dimension" name="starDistance"></attr>
        <!--//星星背景-->
        <attr format="reference" name="starBackground"></attr>
        <!--//星星变化背景-->
        <attr format="reference" name="starDrawBackground"></attr>
        <!--//控件是否可以点击-->
        <attr format="boolean" name="starClickable"></attr>
    </declare-styleable>

    <declare-styleable name="ImageViewer">
        <!--是否显示图片序号-->
        <attr name="ivr_show_index" format="boolean" />
        <!--是否允许图片拖拽-->
        <attr name="ivr_drag_enable" format="boolean" />
        <!--是否开启进入动画-->
        <attr name="ivr_enter_anim" format="boolean" />
        <!--是否开启退出动画-->
        <attr name="ivr_exit_anim" format="boolean" />
        <!--进入与退出动画的执行时间-->
        <attr name="ivr_anim_duration" format="integer" />
    </declare-styleable>
    <!--仿微信开关-->
    <declare-styleable name="SlideSwitch">
        <attr name="isopen" format="boolean"/>

        <attr name="open_paint_color" format="color"/>

        <attr name="close_paint_color" format="color"/>

        <attr name="circle_paint_color" format="color"/>

        <attr name="small_padding" format="integer"/>

        <attr name="speed" format="integer"/>

        <attr name="speedtime" format="integer"/>
    </declare-styleable>
    <!--侧滑样式-->
    <declare-styleable name="SlideLayout">
        <!--是否可以拖拽-->
        <attr name="canDrag" format="boolean" />
        <!-- 滑动最小阀值 -->
        <attr name="thresholdMoved" format="dimension|reference" />
        <!--内容部分背景颜色-->
        <attr name="contentBgColor" format="color|reference" />
        <!--内容部分背景资源-->
        <attr name="contentBgResId" format="reference" />
        <!--item的内容-->
        <attr name="contentResId" format="reference" />
        <!--item的滑动操作选项-->
        <attr name="optionsResId" format="reference" />
        <!--item内容布局滑动方向-->
        <attr name="slideDirection" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <!--item的options布局摆放位置-->
        <attr name="optionsLayoutPosition" format="enum">
            <enum name="follow" value="0" />
            <enum name="fixed" value="1" />
        </attr>
    </declare-styleable>
</resources>