<com.mysheng.office.kkanshop.page.PageContainer
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mysheng.office.kkanshop.page.Page
        android:id="@+id/pageOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ripple_material_dark"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.mysheng.office.kkanshop.view.SquareLinearView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mysheng.office.kkanshop.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.mysheng.office.kkanshop.view.SquareLinearView>


            <View style="@style/bg_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/goodsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_alignParentLeft="true"
                    android:text="￥:289"
                    android:textSize="@dimen/txt_18"
                    android:textColor="@color/red_text_color"/>
                <TextView
                    android:id="@+id/goodsOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_toRightOf="@+id/goodsPrice"
                    android:text="￥:399"
                    android:textSize="@dimen/txt_14"
                   />
                <ImageView
                    android:id="@+id/goodsFollow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/txt_10"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_follow"/>
            </RelativeLayout>
            <View style="@style/bg_line"/>
            <TextView
                android:id="@+id/shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minLines="2"
                android:lineSpacingMultiplier="1.5"
                android:text="能够在布局计算过程中检测数据集的批量变化而从能够在布局计算过程中检测数据集的批量变化而从"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"/>
            <View style="@style/bg_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/goodsType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_alignParentLeft="true"
                    android:text="已选:" />
                <TextView
                    android:id="@+id/goodsTypeName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_toRightOf="@+id/goodsType"
                    android:text="红色 S码"
                    android:textSize="@dimen/txt_14"
                    />
                <ImageView
                    android:id="@+id/typeSelect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/txt_10"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/more"/>
            </RelativeLayout>
            <View style="@style/bg_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_alignParentLeft="true"
                    android:text="送至:" />
                <TextView
                    android:id="@+id/addressName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_toRightOf="@+id/address"
                    android:text="北京市海淀区三环内"
                    android:textSize="@dimen/txt_14"
                    />
                <ImageView
                    android:id="@+id/addressSelect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/txt_10"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/more"/>
            </RelativeLayout>
            <View style="@style/bg_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/charges"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_alignParentLeft="true"
                    android:text="运费:" />
                <TextView
                    android:id="@+id/chargesName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:layout_toRightOf="@+id/charges"
                    android:text="以免运费"
                    android:textSize="@dimen/txt_14"
                    />
            </RelativeLayout>
            <View style="@style/bg_line"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:alpha="0.4"
                    android:background="#dddddd" />

                <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户点评"
                            android:textColor="#222222"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/tv_comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="(0)"
                            android:textColor="#222222"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好评度"
                            android:textColor="#222222"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/tv_good_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="100%"
                            android:textColor="#ec0f38"
                            android:textSize="13dp" />

                        <ImageView
                            android:id="@+id/iv_comment_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:alpha="0.4"
                    android:background="#dddddd" />

                <LinearLayout
                    android:id="@+id/ll_empty_comment"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无评论"
                        android:textColor="#888888"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout >
    </com.mysheng.office.kkanshop.page.Page >

    <com.mysheng.office.kkanshop.page.Page
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/pageBehavior" >

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </WebView >
    </com.mysheng.office.kkanshop.page.Page >

</com.mysheng.office.kkanshop.page.PageContainer >
