<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_title_radius">
        <ImageView
            android:layout_width="30dp"
            android:layout_margin="5dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:src="@drawable/icon_shop"/>
        <TextView
            android:id="@+id/shopName"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="星月神电动车定边旗舰店"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/onlyOne"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/lr_border"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goodsImage"
            android:layout_width="60dp"
            android:scaleType="centerCrop"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/txt_14"
                android:text="月莲2017新品大码女装风衣外套5876 3xl 新春上新品，优惠孔雀"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:lines="1"/>
            <TextView
                android:id="@+id/goodsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="￥:112.00"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/red_text_color"/>
        </LinearLayout>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="x1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/moreList"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/lr_border"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/goodsImage1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon"/>
        <ImageView
            android:id="@+id/goodsImage2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon"/>
        <TextView
            android:id="@+id/goodsNum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="共5件"/>
        <ImageView
            android:id="@+id/allGoods"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/txt_10"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_radius"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="配送方式:"/>
            <TextView
                android:id="@+id/sendType"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_height="match_parent"
                android:text="店家配送"/>
            <ImageView
                android:id="@+id/sendMore"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/txt_10"
                android:layout_gravity="center_vertical"
                android:src="@drawable/more"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="留言:"/>
            <EditText
                android:id="@+id/remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/txt_10"
                android:layout_weight="1"
                android:background="@drawable/bg_edit"
                android:gravity="left|center"
                android:hint="请输入留言信息"
                android:minLines="1"
                android:textCursorDrawable="@drawable/color_cursor" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

