<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_radius"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_margin="5dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:src="@drawable/icon_shop"/>
        <TextView
            android:id="@+id/shopName"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="星月神电动车定边旗舰店"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="100dp"
            android:gravity="center_vertical|right"
            android:layout_height="match_parent"
            android:text="进店看看"/>
        <ImageView
            android:id="@+id/infoShop"
            android:layout_width="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_height="30dp"
            android:src="@drawable/more"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lr_border"
        android:orientation="horizontal">
        <com.mysheng.office.kkanshop.view.SquareLinearView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/goodsPath1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/icon"/>
        </com.mysheng.office.kkanshop.view.SquareLinearView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.mysheng.office.kkanshop.view.SquareLinearView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">
                <ImageView
                    android:id="@+id/goodsPath2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon"/>
            </com.mysheng.office.kkanshop.view.SquareLinearView>
            <com.mysheng.office.kkanshop.view.SquareLinearView
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/goodsPath3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon"/>
            </com.mysheng.office.kkanshop.view.SquareLinearView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/bottom_radius"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/locationMap"
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"
            android:src="@drawable/icon_location"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="二道街向阳小学西侧50米"/>
        <TextView
            android:id="@+id/telPhone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|right"
            android:text="0912-4225858"
            android:textColor="@color/blue_text"/>
    </LinearLayout>
</LinearLayout>
