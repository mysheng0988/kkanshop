<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_layout_shape"
        android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal">
      <RelativeLayout
          android:id="@+id/supermarket"
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_margin="2dp"
          android:gravity="center"
          android:layout_weight="1"
          android:orientation="vertical">
          <ImageView
              android:id="@+id/index1"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_margin="10dp"
              android:src="@drawable/supermarket"
              android:gravity="center_vertical" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:layout_alignParentBottom="true"
              android:layout_alignParentStart="true"
              android:gravity="center"
              android:text="@string/indexName1" />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/trappings"
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_margin="2dp"
          android:gravity="center"
          android:layout_weight="1"
          android:orientation="vertical">
          <ImageView
              android:id="@+id/index2"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_margin="10dp"
              android:src="@drawable/trappings"
              android:gravity="center_vertical" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/index2"
              android:gravity="center"
              android:text="@string/indexName2" />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/travel"
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_margin="2dp"
          android:gravity="center"
          android:layout_weight="1"
          android:orientation="vertical">
          <ImageView
              android:id="@+id/index3"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_margin="10dp"
              android:src="@drawable/travel"
              android:gravity="center_vertical" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/index3"
              android:gravity="center"
              android:text="@string/indexName3" />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/catering"
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_margin="2dp"
          android:gravity="center"
          android:layout_weight="1"
          android:orientation="vertical">
          <ImageView
              android:id="@+id/index4"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_margin="10dp"
              android:src="@drawable/catering"
              android:gravity="center_vertical" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/index4"
              android:gravity="center"
              android:text="@string/indexName4" />
      </RelativeLayout>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/fresh"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/index5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/fresh"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/index5"
                android:gravity="center"
                android:text="@string/indexName5" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/delicatessen"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/index6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/delicatessen"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/index6"
                android:gravity="center"
                android:text="@string/indexName6" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/grain_and_oil"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/index7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/grain_and_oil"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/index7"
                android:gravity="center"
                android:text="@string/indexName7" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/voucher"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/index8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/voucher"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/index8"
                android:gravity="center"
                android:text="@string/indexName8" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

