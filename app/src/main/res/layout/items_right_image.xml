<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/id_recorder_useIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ynn"/>
    <FrameLayout
        android:id="@+id/id_recorder_length"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/id_recorder_useIcon"
        android:background="@drawable/chat_bg_focused">
        <ImageView
            android:id="@+id/id_recorder_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/ynn">
        </ImageView>
    </FrameLayout>
    <TextView
        android:id="@+id/id_recorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/id_recorder_length"
        android:text=""
        android:textColor="#FF777777" />
</RelativeLayout>

